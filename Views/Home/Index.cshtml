    <script>
        class AwesomeHomepage {
            constructor() {
                this.currentRoomSlide = 0;
                this.currentTestimonialSlide = 0;
                this.roomCarousel = document.getElementById('roomCarousel');
                this.testimonialCarousel = document.getElementById('testimonialCarousel');
                this.particleSystem = document.getElementById('particleSystem');
                
                this.init();
            }

            init() {
                this.setupScrollAnimations();
                this.setupCountUpAnimations();
                this.setupCarousels();
                this.setupParticleSystem();
                this.setupGalleryFilter();
                this.setupInteractiveElements();
                this.setupTypingEffect();
                this.setupParallaxEffect();
            }

            setupScrollAnimations() {
                const observerOptions = {
                    threshold: 0.1,
                    rootMargin: '0px 0px -100px 0px'
                };

                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('animate');
                            
                            // Trigger count-up animations
                            const countUps = entry.target.querySelectorAll('.count-up');
                            countUps.forEach(countUp => {
                                if (!countUp.classList.contains('animated')) {
                                    this.animateCountUp(countUp);
                                    countUp.classList.add('animated');
                                }
                            });
                        }
                    });
                }, observerOptions);

                document.querySelectorAll('.scroll-animate').forEach(el => {
                    observer.observe(el);
                });
            }

            setupCountUpAnimations() {
                // Count-up animations are handled in scroll animations
            }

            animateCountUp(element) {
                const target = parseInt(element.dataset.target);
                const span = element.querySelector('span');
                let current = 0;
                const increment = target / 100;
                const duration = 2000;
                const stepTime = duration / 100;

                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    span.textContent = Math.floor(current).toLocaleString();
                }, stepTime);
            }

            setupCarousels() {
                // Room Carousel
                const prevRoomBtn = document.getElementById('prevRoom');
                const nextRoomBtn = document.getElementById('nextRoom');
                const roomIndicators = document.querySelectorAll('[data-slide]');

                if (prevRoomBtn && nextRoomBtn) {
                    prevRoomBtn.addEventListener('click', () => this.changeRoomSlide(-1));
                    nextRoomBtn.addEventListener('click', () => this.changeRoomSlide(1));
                }

                roomIndicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', () => this.goToRoomSlide(index));
                });

                // Testimonial Carousel
                const prevTestimonialBtn = document.getElementById('prevTestimonial');
                const nextTestimonialBtn = document.getElementById('nextTestimonial');
                const testimonialIndicators = document.querySelectorAll('[data-testimonial]');

                if (prevTestimonialBtn && nextTestimonialBtn) {
                    prevTestimonialBtn.addEventListener('click', () => this.changeTestimonialSlide(-1));
                    nextTestimonialBtn.addEventListener('click', () => this.changeTestimonialSlide(1));
                }

                testimonialIndicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', () => this.goToTestimonialSlide(index));
                });

                // Auto-play carousels
                setInterval(() => {
                    this.changeRoomSlide(1);
                }, 8000);

                setInterval(() => {
                    this.changeTestimonialSlide(1);
                }, 10000);
            }

            changeRoomSlide(direction) {
                const totalSlides = 2;
                this.currentRoomSlide = (this.currentRoomSlide + direction + totalSlides) % totalSlides;
                this.updateRoomCarousel();
            }

            goToRoomSlide(index) {
                this.currentRoomSlide = index;
                this.updateRoomCarousel();
            }

            updateRoomCarousel() {
                if (this.roomCarousel) {
                    this.roomCarousel.style.transform = `translateX(-${this.currentRoomSlide * 100}%)`;
                    
                    // Update indicators
                    document.querySelectorAll('[data-slide]').forEach((indicator, index) => {
                        if (index === this.currentRoomSlide) {
                            indicator.classList.remove('bg-gray-300', 'dark:bg-gray-600');
                            indicator.classList.add('bg-blue-500');
                        } else {
                            indicator.classList.remove('bg-blue-500');
                            indicator.classList.add('bg-gray-300', 'dark:bg-gray-600');
                        }
                    });
                }
            }

            changeTestimonialSlide(direction) {
                const totalSlides = 3;
                this.currentTestimonialSlide = (this.currentTestimonialSlide + direction + totalSlides) % totalSlides;
                this.updateTestimonialCarousel();
            }

            goToTestimonialSlide(index) {
                this.currentTestimonialSlide = index;
                this.updateTestimonialCarousel();
            }

            updateTestimonialCarousel() {
                if (this.testimonialCarousel) {
                    this.testimonialCarousel.style.transform = `translateX(-${this.currentTestimonialSlide * 100}%)`;
                    
                    // Update indicators
                    document.querySelectorAll('[data-testimonial]').forEach((indicator, index) => {
                        if (index === this.currentTestimonialSlide) {
                            indicator.classList.remove('bg-gray-300', 'dark:bg-gray-600');
                            indicator.classList.add('bg-blue-500');
                        } else {
                            indicator.classList.remove('bg-blue-500');
                            indicator.classList.add('bg-gray-300', 'dark:bg-gray-600');
                        }
                    });
                }
            }

            setupParticleSystem() {
                if (!this.particleSystem) return;

                // Create dynamic particles
                for (let i = 0; i < 20; i++) {
                    const particle = document.createElement('div');
                    const types = ['particle-1', 'particle-2', 'particle-3'];
                    const type = types[Math.floor(Math.random() * types.length)];
                    
                    particle.className = `particle ${type}`;
                    particle.style.top = Math.random() * 100 + '%';
                    particle.style.left = Math.random() * 100 + '%';
                    particle.style.animationDelay = Math.random() * 10 + 's';
                    particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                    
                    this.particleSystem.appendChild(particle);
                }

                // Mouse interaction with particles
                document.addEventListener('mousemove', (e) => {
                    const particles = this.particleSystem.querySelectorAll('.particle');
                    const mouseX = e.clientX / window.innerWidth;
                    const mouseY = e.clientY / window.innerHeight;

                    particles.forEach((particle, index) => {
                        const speed = (index % 3 + 1) * 0.5;
                        const x = (mouseX - 0.5) * speed;
                        const y = (mouseY - 0.5) * speed;
                        
                        particle.style.transform = `translate(${x * 20}px, ${y * 20}px)`;
                    });
                });
            }

            setupGalleryFilter() {
                const filterButtons = document.querySelectorAll('.gallery-filter');
                const galleryItems = document.querySelectorAll('.gallery-item');

                filterButtons.forEach(button => {
                    button.addEventListener('click', () => {
                        const filter = button.dataset.filter;
                        
                        // Update active button
                        filterButtons.forEach(btn => {
                            btn.classList.remove('active', 'bg-blue-500', 'text-white');
                            btn.classList.add('text-gray-600', 'dark:text-gray-300');
                        });
                        button.classList.add('active', 'bg-blue-500', 'text-white');
                        button.classList.remove('text-gray-600', 'dark:text-gray-300');
                        
                        // Filter gallery items
                        galleryItems.forEach(item => {
                            if (filter === 'all' || item.dataset.category === filter) {
                                item.style.display = 'block';
                                item.style.opacity = '0';
                                item.style.transform = 'scale(0.8)';
                                
                                setTimeout(() => {
                                    item.style.transition = 'all 0.5s ease';
                                    item.style.opacity = '1';
                                    item.style.transform = 'scale(1)';
                                }, 100);
                            } else {
                                item.style.transition = 'all 0.3s ease';
                                item.style.opacity = '0';
                                item.style.transform = 'scale(0.8)';
                                
                                setTimeout(() => {
                                    item.style.display = 'none';
                                }, 300);
                            }
                        });
                    });
                });
            }

            setupInteractiveElements() {
                // Button ripple effects
                document.querySelectorAll('.btn-futuristic, .btn-outline').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const ripple = document.createElement('span');
                        const rect = btn.getBoundingClientRect();
                        const size = Math.max(rect.width, rect.height);
                        const x = e.clientX - rect.left - size / 2;
                        const y = e.clientY - rect.top - size / 2;
                        
                        ripple.style.cssText = `
                            position: absolute;
                            width: ${size}px;
                            height: ${size}px;
                            left: ${x}px;
                            top: ${y}px;
                            background: rgba(255, 255, 255, 0.3);
                            border-radius: 50%;
                            transform: scale(0);
                            animation: ripple 0.6s linear;
                            pointer-events: none;
                        `;
                        
                        btn.style.position = 'relative';
                        btn.appendChild(ripple);
                        
                        setTimeout(() => {
                            ripple.remove();
                        }, 600);
                    });
                });

                // Enhanced hover effects for images
                document.querySelectorAll('img').forEach(img => {
                    img.addEventListener('mouseenter', () => {
                        img.style.filter = 'brightness(1.1) contrast(1.1)';
                    });

                    img.addEventListener('mouseleave', () => {
                        img.style.filter = 'brightness(1) contrast(1)';
                    });
                });

                // Smooth scroll for anchor links
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function (e) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    });
                });
            }

            setupTypingEffect() {
                const typingElement = document.querySelector('.typing-text');
                if (!typingElement) return;

                const texts = [
                    'Hotel Rose',
                    'Luxury Redefined',
                    'Your Paradise',
                    'Dream Destination'
                ];
                let textIndex = 0;
                let charIndex = 0;
                let isDeleting = false;

                const typeText = () => {
                    const currentText = texts[textIndex];
                    
                    if (isDeleting) {
                        typingElement.textContent = currentText.substring(0, charIndex - 1);
                        charIndex--;
                    } else {
                        typingElement.textContent = currentText.substring(0, charIndex + 1);
                        charIndex++;
                    }

                    let typeSpeed = isDeleting ? 100 : 200;

                    if (!isDeleting && charIndex === currentText.length) {
                        typeSpeed = 2000;
                        isDeleting = true;
                    } else if (isDeleting && charIndex === 0) {
                        isDeleting = false;
                        textIndex = (textIndex + 1) % texts.length;
                        typeSpeed = 500;
                    }

                    setTimeout(typeText, typeSpeed);
                };

                // Start typing effect after a delay
                setTimeout(typeText, 2000);
            }

            setupParallaxEffect() {
                let ticking = false;

                const updateParallax = () => {
                    const scrolled = window.pageYOffset;
                    const parallaxElements = document.querySelectorAll('.parallax');

                    parallaxElements.forEach((element, index) => {
                        const speed = (index + 1) * 0.5;
                        const yPos = -(scrolled * speed);
                        element.style.transform = `translateY(${yPos}px)`;
                    });

                    ticking = false;
                };

                window.addEventListener('scroll', () => {
                    if (!ticking) {
                        requestAnimationFrame(updateParallax);
                        ticking = true;
                    }
                });
            }
        }

        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new AwesomeHomepage();
