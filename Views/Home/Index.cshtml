@* // this is home page index.csthml *@
@{
    ViewData["Title"] = "Home Page";
}

@* this is the Upper part of the page *@
<section class="container mx-auto flex items-center gap-12 px-4">
    <div class="h-full py-10">
        <h1 class="font-heading mb-6"> Explore Our Exquisite Hotel </h1>
        <p class="mb-12 max-w-lg text-[#4a4a4a] dark:text-[#ffffffea]">
            Experience an Exquisite Hotel Immersed in Rich History and Timeless Elegance.
        </p>
        <button class="btn-primaryHome">Get Started</button>
        <div class="mt-12 flex justify-between">
            <div class="flex flex-col items-center justify-center gap-3">
                <p class="text-center text-sm lg:text-xl">Basic Room</p>
                <p class="count-up text-lg font-medium md:font-bold xl:text-5xl" data-target="100">
                    <span>0</span>
                </p>
            </div>
            <div class="flex flex-col items-center justify-center gap-3">
                <p class="text-center text-sm lg:text-xl">Luxury Room</p>
                <p class="count-up text-lg font-medium md:font-bold xl:text-5xl" data-target="70">
                    <span>0</span>
                </p>
            </div>
            <div class="flex flex-col items-center justify-center gap-3">
                <p class="text-center text-sm lg:text-xl">Suite</p>
                <p class="count-up text-lg font-medium md:font-bold xl:text-5xl" data-target="60">
                    <span>0</span>
                </p>
            </div>
        </div>
    </div>
    <div class="hidden grid-cols-1 gap-8 md:grid">
        <div class="h-48 overflow-hidden rounded-2xl">
            <img src="/TempPictures/hero-1.jpeg" alt="pic1" width="300" height="300" class="img scale-animation" />
        </div>
        <div class="grid h-48 grid-cols-2 gap-8">
            <div class="overflow-hidden rounded-2xl">
                <img src="/TempPictures/hero-2.jpeg" alt="pic2" width="300" height="300" class="img scale-animation" />
            </div>
            <div class="overflow-hidden rounded-2xl">
                <img src="/TempPictures/hero-3.jpeg" alt="pic3" width="300" height="300" class="img scale-animation" />
            </div>
        </div>
    </div>
</section>
<section class="glass-effect rounded-lg px-4 py-6 dark:glass-effect">
    <div class="container mx-auto flex flex-wrap items-center justify-between gap-4">
        <div class="relative mb-4 w-full md:mb-0 md:w-1/3 lg:w-auto" id="dropdown">
            <div id="dropdownBtn"
                class="flex w-full min-w-[150px] cursor-pointer items-center justify-between rounded-full border border-blue-300 bg-blue-500 px-6 py-3 text-white shadow-lg transition-all duration-300 hover:shadow-xl dark:bg-blue-400 dark:text-gray-900 md:min-w-[180px]">
                <span id="selectedText" class="whitespace-nowrap">Select Room</span>
                <span class="arrow ml-2 rotate-180 transition-transform">▲</span>
            </div>
            @* make the values dynamic later  *@
            <ul id="dropdownList"
                class="absolute left-0 top-full z-50 mt-2 hidden w-full overflow-hidden rounded-2xl border border-gray-300 bg-white shadow-lg dark:border-gray-600 dark:bg-gray-800">
                <li data-value="All"
                    class="cursor-pointer px-6 py-3 transition-colors duration-200 first:rounded-t-2xl last:rounded-b-2xl hover:bg-blue-100 dark:hover:bg-blue-600">
                    All
                </li>
                <li data-value="Basic Room"
                    class="cursor-pointer px-6 py-3 transition-colors duration-200 hover:bg-blue-100 dark:hover:bg-blue-600">
                    Basic Room
                </li>
                <li data-value="Luxury Room"
                    class="cursor-pointer px-6 py-3 transition-colors duration-200 hover:bg-blue-100 dark:hover:bg-blue-600">
                    Luxury Room
                </li>
                <li data-value="Suite"
                    class="cursor-pointer px-6 py-3 transition-colors duration-200 first:rounded-t-2xl last:rounded-b-2xl hover:bg-blue-100 dark:hover:bg-blue-600">
                    Suite
                </li>
            </ul>
        </div>
        <div class="mb-4 w-full md:mb-0 md:w-1/3 lg:w-auto">
            @* make it like the search bar i implemented on the learning web application  *@
            <input type="search" id="search" placeholder="Search..."
                class="w-full rounded px-4 py-3 leading-tight placeholder:text-black focus:outline-none dark:bg-black dark:placeholder:text-white" />
        </div>
        <button class="btn-primaryHome" type="button">Search</button>

    </div>

</section>
@await Html.PartialAsync("Partials/FeaturedRoom")
@await Html.PartialAsync("Partials/Gallery")
@await Html.PartialAsync("Partials/NewsLetter")
