@{
    ViewData["Title"] = "Home Page";
}

@* this is the Upper part of the page *@
<section class="flex px-4 items-center gap-12 container mx-auto">
    <div class="py-10 h-full ">
        <h1 class=" font-heading mb-6"> Explore Our Exquisite Hotel </h1>
        <p class="text-[#4a4a4a] dark:text-[#ffffffea] mb-12 max-w-lg ">
            Experience an Exquisite Hotel Immersed in Rich History and Timeless Elegance.
        </p>
        <button class="btn-primaryHome">Get Started</button>
        <div class="flex justify-between mt-12">
            <div class="flex gap-3 flex-col items-center justify-center">
                <p class="text-sm lg:text-xl text-center">Basic Room</p>
                <p class="md:font-bold font-medium text-lg xl:text-5xl count-up" data-target="100">
                    <span>0</span>
                </p>
            </div>
            <div class="flex gap-3 flex-col items-center justify-center">
                <p class="text-sm lg:text-xl text-center">Luxury Room</p>
                <p class="md:font-bold font-medium text-lg xl:text-5xl count-up" data-target="70">
                    <span>0</span>
                </p>
            </div>
            <div class="flex gap-3 flex-col items-center justify-center">
                <p class="text-sm lg:text-xl text-center">Suite</p>
                <p class="md:font-bold font-medium text-lg xl:text-5xl count-up" data-target="60">
                    <span>0</span>
                </p>
            </div>
        </div>
    </div>
    <div class="md:grid hidden gap-8 grid-cols-1">
        <div class="rounded-2xl overflow-hidden h-48">
            <img src="/TempPictures/hero-1.jpeg" alt="pic1" width="300" height="300" class="img scale-animation" />
        </div>
        <div class="grid grid-cols-2 gap-8 h-48">
            <div class="rounded-2xl overflow-hidden">
                <img src="/TempPictures/hero-2.jpeg" alt="pic2" width="300" height="300" class="img scale-animation" />
            </div>
            <div class="rounded-2xl overflow-hidden">
                <img src="/TempPictures/hero-3.jpeg" alt="pic3" width="300" height="300" class="img scale-animation" />
            </div>
        </div>
    </div>
</section>
<section class="glass-effect dark:glass-effect px-4 py-6 rounded-lg">
    <div class="container mx-auto flex gap-4 flex-wrap justify-between items-center ">
        <div class="relative w-full md:w-1/3 lg:w-auto mb-4 md:mb-0" id="dropdown">
            <div id="dropdownBtn"
                class="rounded-full bg-blue-500 text-white dark:bg-blue-400 dark:text-gray-900 px-6 py-3 border border-blue-300 w-full flex justify-between items-center cursor-pointer min-w-[150px] md:min-w-[180px] transition-all duration-300 shadow-lg hover:shadow-xl">
                <span id="selectedText" class="whitespace-nowrap">Select Room</span>
                <span class="arrow transition-transform rotate-180 ml-2">▲</span>
            </div>
            @* make the values dynamic later  *@
            <ul id="dropdownList"
                class="absolute top-full left-0 w-full bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-2xl shadow-lg z-50 hidden mt-2 overflow-hidden">
                <li data-value="All"
                    class="px-6 py-3 hover:bg-blue-100 dark:hover:bg-blue-600 transition-colors duration-200 cursor-pointer first:rounded-t-2xl last:rounded-b-2xl">
                    All
                </li>
                <li data-value="Basic Room"
                    class="px-6 py-3 hover:bg-blue-100 dark:hover:bg-blue-600 transition-colors duration-200 cursor-pointer">
                    Basic Room
                </li>
                <li data-value="Luxury Room"
                    class="px-6 py-3 hover:bg-blue-100 dark:hover:bg-blue-600 transition-colors duration-200 cursor-pointer">
                    Luxury Room
                </li>
                <li data-value="Suite"
                    class="px-6 py-3 hover:bg-blue-100 dark:hover:bg-blue-600 transition-colors duration-200 cursor-pointer first:rounded-t-2xl last:rounded-b-2xl">
                    Suite
                </li>
            </ul>
        </div>
        <div class="w-full md:w-1/3 lg:w-auto mb-4 md:mb-0">
            @* make it like the search bar i implemented on the learning web application  *@
            <input type="search" id="search" placeholder="Search..."
                class="w-full px-4 py-3 rounded leading-tight dark:bg-black focus:outline-none placeholder:text-black dark:placeholder:text-white " />
        </div>
        <button class="btn-primaryHome " type="button">Search</button>

    </div>

</section>
@await Html.PartialAsync("Partials/FeaturedRoom")
@await Html.PartialAsync("Partials/Gallery")
@await Html.PartialAsync("Partials/NewsLetter")
