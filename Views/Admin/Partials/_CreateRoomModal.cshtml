<!-- Create Room Modal -->
<div id="createRoomModal" class="fixed inset-0 z-50 hidden items-center justify-center modal-backdrop">
    <div class="modal-content bg-white/90 backdrop-blur-xl rounded-2xl border border-white/30 shadow-2xl p-8 w-full max-w-lg mx-4 max-h-[90vh] overflow-y-auto">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                <i class="fas fa-bed mr-2"></i>
                Create New Room
            </h2>
            <button onclick="closeModal('createRoomModal')" class="text-gray-500 hover:text-gray-700 transition-colors duration-200">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <form id="createRoomForm" onsubmit="event.preventDefault(); submitForm('createRoomForm', '/Home/CreateRoom', 'createRoomModal');">
            <div class="space-y-4">
                <!-- Error Message Container -->
                <div class="error-message hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-xl"></div>
                
                <!-- Room Number and Floor -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="form-label" for="roomNumber">
                            <i class="fas fa-door-open mr-1"></i>
                            Room Number
                        </label>
                        <input type="text" id="roomNumber" name="Number" required class="form-input" placeholder="e.g., 101" />
                    </div>
                    <div>
                        <label class="form-label" for="roomFloor">
                            <i class="fas fa-building mr-1"></i>
                            Floor
                        </label>
                        <input type="number" id="roomFloor" name="Floor" required min="1" class="form-input" placeholder="1" />
                    </div>
                </div>
                
                <!-- Room Type -->
                <div>
                    <label class="form-label" for="roomType">
                        <i class="fas fa-home mr-1"></i>
                        Room Type
                    </label>
                    <select id="roomType" name="Type" required class="form-select">
                        <option value="">Select room type</option>
                        <option value="Standard">Standard</option>
                        <option value="Deluxe">Deluxe</option>
                        <option value="Suite">Suite</option>
                        <option value="Presidential">Presidential</option>
                    </select>
                </div>
                
                <!-- Status -->
                <div>
                    <label class="form-label" for="roomStatus">
                        <i class="fas fa-info-circle mr-1"></i>
                        Status
                    </label>
                    <select id="roomStatus" name="Status" required class="form-select">
                        <option value="">Select status</option>
                        <option value="Available">Available</option>
                        <option value="Occupied">Occupied</option>
                        <option value="Maintenance">Maintenance</option>
                    </select>
                </div>
                
                <!-- Price and Capacity -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="form-label" for="roomPrice">
                            <i class="fas fa-dollar-sign mr-1"></i>
                            Price per Night
                        </label>
                        <input type="number" id="roomPrice" name="Price" required min="0.01" step="0.01" class="form-input" placeholder="120.00" />
                    </div>
                    <div>
                        <label class="form-label" for="roomCapacity">
                            <i class="fas fa-users mr-1"></i>
                            Capacity
                        </label>
                        <input type="number" id="roomCapacity" name="Capacity" required min="1" class="form-input" placeholder="2" />
                    </div>
                </div>
                
                <!-- Amenities -->
                <div>
                    <label class="form-label" for="roomAmenities">
                        <i class="fas fa-star mr-1"></i>
                        Amenities
                    </label>
                    <input type="text" id="roomAmenities" name="AmenitiesString" class="form-input" placeholder="WiFi, AC, TV, Mini Bar (comma separated)" />
                    <p class="text-sm text-gray-500 mt-1">Enter amenities separated by commas</p>
                </div>
            </div>
            
            <!-- Form Actions -->
            <div class="flex justify-end space-x-3 mt-8">
                <button type="button" onclick="closeModal('createRoomModal')" class="btn-secondary">
                    <i class="fas fa-times mr-2"></i>
                    Cancel
                </button>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-plus mr-2"></i>
                    Create Room
                </button>
            </div>
        </form>
    </div>
</div>
