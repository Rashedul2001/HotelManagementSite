@{
    string currentAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
}

<!-- Desktop Sidebar -->
<div class="sidebar hidden lg:block">
    <div class="flex flex-col h-full">
        <!-- Logo Section -->
        <div class="p-6 border-b border-white/10">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                    <i class="fas fa-building text-white"></i>
                </div>
                <div class="sidebar-text">
                    <h1 class="text-xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                        HotelPro
                    </h1>
                    <p class="text-sm text-gray-600">Management</p>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4 space-y-2">
            <button class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 group relative overflow-hidden @(currentAction == "Users" ? "bg-gradient-to-r from-blue-500/20 to-purple-500/20 text-blue-600 shadow-lg active" : "hover:bg-white/10 text-gray-700")" data-target="/Home/Users">
                <i class="fas fa-users w-5 h-5 relative z-10"></i>
                <span class="font-medium relative z-10 sidebar-text">Hotel Users</span>
                <div class="sidebar-tooltip">
                    Hotel Users
                </div>
            </button>
            
            <button class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 group relative overflow-hidden @(currentAction == "Rooms" ? "bg-gradient-to-r from-blue-500/20 to-purple-500/20 text-blue-600 shadow-lg active" : "hover:bg-white/10 text-gray-700")" data-target="/Home/Rooms">
                <i class="fas fa-bed w-5 h-5 relative z-10"></i>
                <span class="font-medium relative z-10 sidebar-text">Hotel Rooms</span>
                <div class="sidebar-tooltip">
                    Hotel Rooms
                </div>
            </button>
            
            <button class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 group relative overflow-hidden hover:bg-white/10 text-gray-700" data-target="/Home/Settings">
                <i class="fas fa-cog w-5 h-5 relative z-10"></i>
                <span class="font-medium relative z-10 sidebar-text">Settings</span>
                <div class="sidebar-tooltip">
                    Settings
                </div>
            </button>
        </nav>
    </div>
</div>

<!-- Mobile Sidebar -->
<div class="sidebar-mobile lg:hidden">
    <div class="flex flex-col h-full">
        <!-- Logo Section -->
        <div class="p-6 border-b border-white/10">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                    <i class="fas fa-building text-white"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                        HotelPro
                    </h1>
                    <p class="text-sm text-gray-600">Management</p>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4 space-y-2">
            <button class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 group relative overflow-hidden @(currentAction == "Users" ? "bg-gradient-to-r from-blue-500/20 to-purple-500/20 text-blue-600 shadow-lg active" : "hover:bg-white/10 text-gray-700")" data-target="/Home/Users">
                <i class="fas fa-users w-5 h-5 relative z-10"></i>
                <span class="font-medium relative z-10">Hotel Users</span>
            </button>
            
            <button class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 group relative overflow-hidden @(currentAction == "Rooms" ? "bg-gradient-to-r from-blue-500/20 to-purple-500/20 text-blue-600 shadow-lg active" : "hover:bg-white/10 text-gray-700")" data-target="/Home/Rooms">
                <i class="fas fa-bed w-5 h-5 relative z-10"></i>
                <span class="font-medium relative z-10">Hotel Rooms</span>
            </button>
            
            <button class="nav-item w-full flex items-center space-x-3 px-4 py-3 rounded-xl transition-all duration-200 group relative overflow-hidden hover:bg-white/10 text-gray-700" data-target="/Home/Settings">
                <i class="fas fa-cog w-5 h-5 relative z-10"></i>
                <span class="font-medium relative z-10">Settings</span>
            </button>
        </nav>
    </div>
</div>
