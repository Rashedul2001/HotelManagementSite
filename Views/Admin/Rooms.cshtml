@model HotelManagementSite.Models.Temp.RoomViewModel
@{
    ViewData["Title"] = "Hotel Rooms";
    Layout = "_AdminLayout";
}
<!-- Main Content -->
<main class="main-content">
    <div class="p-8">
        <div class="animate-fade-in space-y-6">
            <!-- Header -->
            <div class="flex flex-col items-start justify-between gap-4 sm:flex-row sm:items-center">
                <div>
                    <h1 class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-3xl font-bold text-transparent">
                        Hotel Rooms
                    </h1>
                    <p class="mt-1 text-gray-600">Manage your hotel rooms and availability</p>
                </div>
                <button onclick="openModal('createRoomModal')" class="btn-primary">
                    <i class="fas fa-plus mr-2"></i>
                    Create Room
                </button>
            </div>

            <!-- Search and Sort -->
            <form method="get" class="flex flex-col items-center justify-between gap-4 sm:flex-row">
                <div class="relative max-w-md flex-1">
                    <i class="fas fa-search -translate-y-1/2 absolute left-3 top-1/2 transform text-gray-400"></i>
                    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search rooms..." class="form-input pl-10" />
                </div>
                <div class="flex gap-2">
                    <select name="sortBy" class="form-select">
                        <option value="number" selected = "@(Model.SortBy == "number" ? "selected" : "")">Sort by: Room Number</option>
                        <option value="type" selected = "@(Model.SortBy == "type" ? "selected" : "")">Sort by: Room Type</option>
                        <option value="status" selected = "@(Model.SortBy == "status" ? "selected" : "")">Sort by: Status</option>
                        <option value="price" selected = "@(Model.SortBy == "price" ? "selected" : "")">Sort by: Price</option>
                    </select>
                    <button type="submit" class="rounded-xl bg-blue-500 px-4 py-2 text-white transition-colors duration-200 hover:bg-blue-600">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>

            @await Html.PartialAsync("Partials/_RoomsTable", Model)
        </div>
    </div>
</main>

@await Html.PartialAsync("Partials/_CreateRoomModal")

@section Scripts {
    <script>
        // Auto-submit form on input change
        $('input[name="searchTerm"], select[name="sortBy"]').on('change input', function() {
            $(this).closest('form').submit();
        });
    </script>
}
