@{
    ViewData["Title"] = "Dashboard";
    Layout = "AdminLayout";
}



<!-- Mobile Menu Button -->
<button id="mobile-menu-btn" class="fixed top-4 left-4 z-50 lg:hidden bg-white/80 backdrop-blur-sm border border-white/20 shadow-lg rounded-lg p-2 hover:bg-white/90 transition-all duration-200">
    <i class="fas fa-bars text-gray-700"></i>
</button>

<!-- Mobile Overlay -->
<div id="mobile-overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 lg:hidden hidden"></div>

@await Html.PartialAsync("Partials/_Sidebar", "Index")

<!-- Main Content -->
<main class="main-content">
    <div class="p-8">
        <div class="space-y-6 animate-fade-in">
            <div class="text-center">
                <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent mb-4">
                    Welcome to HotelPro Dashboard
                </h1>
                <p class="text-gray-600 text-lg mb-8">
                    Manage your hotel operations with ease
                </p>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
                    <div class="bg-white/20 backdrop-blur-xl rounded-2xl border border-white/20 shadow-2xl p-6 hover:shadow-3xl transition-all duration-300 transform hover:scale-105">
                        <div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full flex items-center justify-center shadow-lg mx-auto mb-4">
                            <i class="fas fa-users text-2xl text-white"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-800 mb-2">Hotel Users</h3>
                        <p class="text-gray-600 mb-4">Manage your hotel staff and user accounts</p>
                        <a href="/Home/Users" class="inline-block bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-6 py-2 rounded-lg transition-all duration-200 transform hover:scale-105">
                            View Users
                        </a>
                    </div>
                    
                    <div class="bg-white/20 backdrop-blur-xl rounded-2xl border border-white/20 shadow-2xl p-6 hover:shadow-3xl transition-all duration-300 transform hover:scale-105">
                        <div class="w-16 h-16 bg-gradient-to-br from-purple-400 to-pink-500 rounded-full flex items-center justify-center shadow-lg mx-auto mb-4">
                            <i class="fas fa-bed text-2xl text-white"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-800 mb-2">Hotel Rooms</h3>
                        <p class="text-gray-600 mb-4">Manage room availability and bookings</p>
                        <a href="/Home/Rooms" class="inline-block bg-gradient-to-r from-purple-500 to-pink-600 hover:from-purple-600 hover:to-pink-700 text-white px-6 py-2 rounded-lg transition-all duration-200 transform hover:scale-105">
                            View Rooms
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
