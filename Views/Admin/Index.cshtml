@{ 
    ViewData["Title"] = "Admin Panel";
    Layout = "_AdminLayout";
}

<!-- Main Content -->
<main class="main-content">
    <div class="p-8">
        <div class="animate-fade-in space-y-6">
            <div class="text-center">
                <h1 class="mb-4 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-4xl font-bold text-transparent">
                    Welcome to Hotel-Rose Admin Dashboard
                </h1>
                <p class="mb-8 text-lg text-gray-600">
                    Manage your hotel operations with ease
                </p>
                
                <div class="mx-auto grid max-w-4xl grid-cols-1 gap-6 md:grid-cols-2">
                    <div class="transform rounded-2xl border border-white/20 bg-white/20 p-6 shadow-2xl backdrop-blur-xl transition-all duration-300 hover:shadow-3xl hover:scale-105">
                        <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-blue-400 to-purple-500 shadow-lg">
                                @await Html.PartialAsync("Icons/UsersIcon", "h-10 w-10 text-white")
                        </div>
                        <h3 class="mb-2 text-xl font-semibold text-gray-800">Hotel Users</h3>
                        <p class="mb-4 text-gray-600">Manage your hotel staff and user accounts</p>
                        <a asp-controller="Admin" asp-action="Users" class="inline-block transform rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 px-6 py-2 text-white transition-all duration-200 hover:scale-105 hover:from-blue-600 hover:to-purple-700">
                            View Users
                        </a>

                    </div>
                    <div class="transform rounded-2xl border border-white/20 bg-white/20 p-6 shadow-2xl backdrop-blur-xl transition-all duration-300 hover:shadow-3xl hover:scale-105">
                        <div class="mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-purple-400 to-pink-500 shadow-lg">
                            @await Html.PartialAsync("Icons/bedIcon", "h-10 w-10 text-white")
                        </div>
                        <h3 class="mb-2 text-xl font-semibold text-gray-800">Hotel Rooms</h3>
                        <p class="mb-4 text-gray-600">Manage room availability and bookings</p>
                        <a href="/admin/Roomow" class="inline-block transform rounded-lg bg-gradient-to-r from-purple-500 to-pink-600 px-6 py-2 text-white transition-all duration-200 hover:scale-105 hover:from-purple-600 hover:to-pink-700">
                            View Rooms
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
