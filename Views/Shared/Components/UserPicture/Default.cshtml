@model HotelManagementSite.Models.ViewModels.UserPictureViewModel

@if (Model != null && Model.ProfileImage != null)
{
    var type = string.IsNullOrWhiteSpace(Model.ProfileImageType) ? "image/jpeg" : Model.ProfileImageType;
    var imgSrc = $"data:{type};base64,{Convert.ToBase64String(Model.ProfileImage)}";
    <img src="@imgSrc" alt="Profile" class="w-full h-full rounded-full object-cover" />
}
else 
{
    var name = Model?.Name ?? "?";
    var initial = string.IsNullOrWhiteSpace(name) || name == "?" ? "?" : name.Trim().Substring(0, 1).ToUpperInvariant();
    <div class="w-full h-full bg-blue-500 text-white font-bold flex rounded-full items-center justify-center">
        @initial
    </div>
}
