
<!-- Main Header -->
<header class="header-glass header-neon sticky top-0 z-50 transition-all duration-300">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-20">
            
            <!-- Logo Section -->
            @* without the z-10 the logo and the other links are not clickable fix this later please *@
            <div class="flex items-center space-x-4 z-10">
                <a class="logo-glow text-2xl md:text-3xl font-black gradient-text" 
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="relative">
                        Hotel_Rose
                        <div class="absolute -inset-1 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg blur opacity-20 group-hover:opacity-40 transition duration-300"></div>
                    </span>
                </a>
                
                <!-- Status Indicator -->
                <div class="hidden md:flex items-center space-x-2">
                    <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                    <span class="text-xs text-gray-600 dark:text-gray-400">Online</span>
                </div>
            </div>

            <!-- Desktop Navigation -->
            <nav class="hidden lg:flex items-center space-x-8 z-10">
                <a class="nav-item text-lg font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-[#7e71f4]" 
                   asp-area="" asp-controller="Home" asp-action="Index">
                    Home
                </a>
                <a class="nav-item text-lg font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-[#7e71f4]" 
                   asp-area="" asp-controller="Rooms" asp-action="Index">
                    Rooms
                </a>
                <a class="nav-item text-lg font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-[#7e71f4]" 
                   asp-area="" asp-controller="Home" asp-action="Gallery">
                    Gallery
                </a>
                <a class="nav-item text-lg font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-[#7e71f4]" 
                   asp-area="" asp-controller="Home" asp-action="Contact">
                    Contact
                </a>
            </nav>

            <!-- User Actions -->
            @* this user Action is conflicting with the logo home rooms links it is the reason they are not clickable
                beacause if i give ti z-10 all goes back to the same was as not clickable 
            but i dont know why
             *@
            <div class="flex items-center space-x-4 "> 
                
                <!-- Search Button (Desktop) -->
                @* but if set z-10 to each of them it is working *@
                <button class=" z-10 hidden md:flex items-center justify-center w-10 h-10 rounded-full glass-morphism neon-border hover:scale-110 transition-all duration-300">
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>

                <!-- Notifications (if user is logged in) -->
                @if (User.Identity != null && User.Identity.IsAuthenticated == true)
                {
                    <button class="z-10 hidden md:flex relative items-center justify-center w-10 h-10 rounded-full glass-morphism neon-border hover:scale-110 transition-all duration-300">
                        <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7H4l5-5v5z"></path>
                        </svg>
                        <div class="notification-badge"></div>
                    </button>
                }

                <!-- User Profile / Login -->
                <div class="flex items-center z-10">
                    @if (User.Identity != null && User.Identity.IsAuthenticated == true)
                    {
                        <a asp-controller="Account" asp-action="Profile" asp-area=""
                           class="user-avatar flex items-center justify-center w-12 h-12 rounded-full glass-morphism neon-border hover:scale-110 transition-all duration-300">
                            @await Component.InvokeAsync("UserPicture")
                        </a>
                    }
                    else
                    {
                       <a href="javascript:void(0)" onclick="showModal('loginModal')" class="user-avatar relative z-20 flex items-center justify-center w-12 h-12 rounded-full glass-morphism neon-border hover:scale-110 transition-all duration-300" aria-label="Sign in">
                            <svg class="w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </a>
                    }
                </div>

                <!-- Theme Toggle -->
                <div class="theme-toggle " id="darkModeToggle">
                    <div class="absolute inset-0 flex items-center justify-center">
                        <svg class="w-4 h-4 text-yellow-500 dark:text-gray-400 transition-opacity duration-300 dark:opacity-0" 
                             fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                        </svg>
                        <svg class="w-4 h-4 text-gray-400 dark:text-blue-400 transition-opacity duration-300 opacity-0 dark:opacity-100 absolute" 
                             fill="currentColor" viewBox="0 0 20 20">
                            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                        </svg>
                    </div>
                </div>

                <!-- Mobile Menu Button -->
                <button class="lg:hidden hamburger" id="mobileMenuBtn">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div class="lg:hidden hidden pointer-events-none mobile-menu fixed top-20 right-0 w-80 h-screen glass-morphism neon-border" id="mobileMenu">
        <div class="p-6 space-y-6">
            
            <!-- Mobile Search -->
            <div class="relative">
                <input type="search" placeholder="Search..." 
                       class="w-full glass-morphism neon-border rounded-full px-4 py-3 text-black dark:text-white placeholder:text-gray-500 dark:placeholder:text-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <button class="absolute right-3 top-1/2 transform -translate-y-1/2">
                    <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </button>
            </div>

            <!-- Mobile Navigation -->
            <nav class="space-y-4">
                <a class="block nav-item text-lg font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-[#7e71f4] py-3 px-4 rounded-lg glass-morphism" 
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="flex items-center space-x-3">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        <span>Home</span>
                    </span>
                </a>
                
                <a class="block nav-item text-lg font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-[#7e71f4] py-3 px-4 rounded-lg glass-morphism" 
                   asp-area="" asp-controller="Rooms" asp-action="Index">
                    <span class="flex items-center space-x-3">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        <span>Rooms</span>
                    </span>
                </a>
                
                <a class="block nav-item text-lg font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-[#7e71f4] py-3 px-4 rounded-lg glass-morphism" 
                   asp-area="" asp-controller="Home" asp-action="Gallery">
                    <span class="flex items-center space-x-3">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span>Gallery</span>
                    </span>
                </a>
                
                <a class="block nav-item text-lg font-medium text-gray-700 dark:text-gray-300 hover:text-blue-500 dark:hover:text-[#7e71f4] py-3 px-4 rounded-lg glass-morphism" 
                   asp-area="" asp-controller="Home" asp-action="Contact">
                    <span class="flex items-center space-x-3">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                        </svg>
                        <span>Contact</span>
                    </span>
                </a>
            </nav>

            <!-- Mobile User Actions -->
            @if (User.Identity != null && User.Identity.IsAuthenticated == true)
            {
                <div class="pt-6 border-t border-gray-300 dark:border-gray-600">
                    <a asp-controller="Account" asp-action="Profile" asp-area=""
                       class="flex items-center space-x-3 py-3 px-4 rounded-lg glass-morphism hover:scale-105 transition-all duration-300">
                        @await Component.InvokeAsync("UserPicture")
                        <span class="text-gray-700 dark:text-gray-300">My Profile</span>
                    </a>
                </div>
            }
            else
            {
                <div class="pt-6 border-t border-gray-300 dark:border-gray-600">
                    <a onclick="showModal('loginModal')"
                            class="w-full btn-futuristic">
                        Sign In
                    </a>
                </div>
            }
        </div>
    </div>
</header>

@await Html.PartialAsync("Partials/LogInModal")
@await Html.PartialAsync("Partials/RegisterModal")

