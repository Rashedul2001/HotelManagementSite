@* //this is header.cshtml *@
<header
    class="container mx-auto flex flex-wrap items-center justify-between rounded-md bg-blue-100 px-4 py-10 text-xl hover:bg-gray-200 dark:bg-gray-800 dark:text-gray-300 md:flex-nowrap dark:hover:bg-gray-700">
    <div class="flex w-full items-center md:2/3">
        <a class="font-black text-iconColor-light dark:text-[#7e71f4]" asp-area="" asp-controller="Home" asp-action="Index">Hotel_Rose</a>
        <ul class="ml-5 flex items-center">
            <li class="flex items-center">
                @if (User.Identity != null && User.Identity.IsAuthenticated == true)
                {
                    <a asp-controller="Account" asp-action="Profile" asp-area="" 
                        class="cursor-pointer text-violet-950 transition duration-300 ease-in-out hover:text-orange-300 dark:text-blue-300 dark:hover:text-white">
                        @await Component.InvokeAsync("UserPicture") 
                    </a>
                }
                else
                {
                    <a onclick="showModal('loginModal')"
                        class="cursor-pointer text-violet-950 transition duration-300 ease-in-out hover:text-orange-300 dark:text-blue-300 dark:hover:text-white">
                         <svg class="h-6 w-6"  viewBox="0 0 24 24" >
                            <use xlink:href="/icons/sprite.svg#userIcon"></use>
                        </svg>
                    </a>
                }
            </li>
            <li class="ml-3 mt-1.5">
                <button id="darkModeToggle" class="cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" id="darkModeIcon" fill="currentColor"
                        viewBox="0 0 384 512">
                        <path
                            d="M223.5 32C100 32 0 132.3 0 256S100 480 223.5 480c60.6 0 115.5-24.2 155.8-63.4c5-4.9 6.3-12.5 3.1-18.7s-10.1-9.7-17-8.5c-9.8 1.7-19.8 2.6-30.1 2.6c-96.9 0-175.5-78.8-175.5-176c0-65.8 36-123.1 89.3-153.3c6.1-3.5 9.2-10.5 7.7-17.3s-7.3-11.9-14.3-12.5c-6.3-.5-12.6-.8-19-.8z" />
                    </svg>
                </button>
            </li>
        </ul>
    </div>
    <ul class="mt-4 flex w-full items-center justify-between md:w-1/3">
        <li class="transition-all duration-500 hover:-translate-y-2">
            <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="transition-all duration-500 hover:-translate-y-2">
            <a class="" asp-area="" asp-controller="Home" asp-action="Index">Rooms</a>
        </li>
        <li class="transition-all duration-500 hover:-translate-y-2">
            <a class="" asp-area="" asp-controller="Home" asp-action="Index">Contact</a>
        </li>
    </ul>
</header>
@await Html.PartialAsync("Partials/LogInModal")
@await Html.PartialAsync("Partials/RegisterModal")


