@model HotelManagementSite.Models.ViewModels.RegisterModel
<div id="registerModal"
	 class="fixed inset-0 z-50 hidden items-center justify-center overflow-y-auto bg-black bg-opacity-50">

	<div id="registerContent"
		 class="glass-bg -translate-y-10 w-full max-w-md scale-95 transform rounded-lg p-8 opacity-0 shadow-lg transition-all duration-500 dark:bg-gray-900 dark:text-white">

		<div class="mb-6 flex items-start justify-between">
			<div class="space-y-1">
				<h1 class="text-3xl font-bold">Join Us</h1>
				<h2 class="text-xl">Create an Hotelzzz Account</h2>
				<p class="text-sm text-gray-300">Make great choice and feel the comfort.</p>
			</div>
			<button type="button" onclick="hideModal('registerModal')"
					class="flex h-8 w-8 items-center justify-center rounded-lg text-sm text-gray-400 hover:bg-gray-200 hover:text-gray-900 dark:hover:bg-gray-600 dark:hover:text-white">
				<svg class="h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
					 viewBox="0 0 14 14">
					<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
						  d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
				</svg>
				<span class="sr-only">Close modal</span>
			</button>
		</div>

		<form asp-controller="Account" asp-action="Register" method="post">
			<div class="mb-4">
				<input required asp-for="UserName" type="text" placeholder="Your Name" class="w-full rounded bg-gray-700 p-3 text-white" />
				<span asp-validation-for="UserName" class="text-sm text-red-500"></span>
			</div>
			<div class="mb-4">
				<input required asp-for="Email" type="email" placeholder="Email" class="w-full rounded bg-gray-700 p-3 text-white" />
				<span asp-validation-for="Email" class="text-sm text-red-500"></span>
			</div>
			<div class="mb-4">
				<input required asp-for="Password" type="password" placeholder="Password" class="w-full rounded bg-gray-700 p-3 text-white" />
				<span asp-validation-for="Password" class="text-sm text-red-500"></span>
			</div>
			<div class="mb-4">
				<input required asp-for="ConfirmPassword" type="Password" placeholder="Confirm Password" class="w-full rounded bg-gray-700 p-3 text-white" />
				<span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
			</div>
			<div class="mb-4 flex items-center">
				<input type="checkbox" class="mr-2" required />
				<label asp-for="AcceptTerms" class="text-sm">
					I agree to Hotelzzz's <a href="#" class="text-blue-500">Terms of Service</a> and <a href="#"
																							  class="text-blue-500">Privacy Policy</a>.
				</label>
			</div>
			<button type="submit" class="w-full rounded bg-blue-600 p-3 font-bold text-white">Sign up</button>
		</form>

		<div class="my-6 flex items-center">
			<hr class="flex-grow border-gray-600">
			<span class="mx-4">or</span>
			<hr class="flex-grow border-gray-600">
		</div>

		<div class="mb-4 flex justify-center">
			<a class="flex w-full items-center justify-center rounded bg-white px-4 py-2 font-bold text-black" asp-controller="Account" asp-action="ExternalLogIn" asp-route-provider="Google">
				<svg class="me-1 h-5 w-5" viewBox="0 0 48 48">
					<use xlink:href="/icons/sprite.svg#googleIcon"></use>
				</svg>
				Continue with Google
			</a>
		</div>

		<div class="mb-6 flex justify-around space-x-2">
			<a class="flex w-full items-center justify-center rounded bg-blue-700 px-4 py-2 text-white" asp-controller="Account" asp-action="ExternalLogIn" asp-route-provider="LinkedIn">
				<svg class="me-1 h-6 w-6" viewBox="0 0 16 16">
					<use xlink:href="/icons/sprite.svg#linkedInIcon"></use>
				</svg>
				LinkedIn
			</a>
			<a class="flex w-full items-center justify-center rounded bg-gray-800 px-4 py-2 text-white" asp-controller="Account" asp-action="ExternalLogIn" asp-route-provider="GitHub">
				<svg class="mr-1 h-5 w-5" viewBox="0 0 20 20">
					<use xlink:href="/icons/sprite.svg#githubIcon"></use>
				</svg>
				GitHub
			</a>
			<a class="flex w-full items-center justify-center rounded bg-blue-700 px-4 py-2 text-white" asp-controller="Account" asp-action="ExternalLogIn" asp-route-provider="Facebook">
				<svg class="mr-1 h-5 w-5" viewBox="0 0 20 20">
					<use xlink:href="/icons/sprite.svg#facebookIcon"></use>
				</svg>
				Facebook
			</a>
		</div>
		<p class="text-center">
			Already have an account? <a class="cursor-pointer text-blue-500"
										onclick="toggleModals(`loginModal`,`registerModal`)">Log in</a>
		</p>
	</div>
</div>

@if (string.Equals(TempData["Info"] as string, "ShowRegisterModal", StringComparison.Ordinal))
{
	<script>

		document.addEventListener("DOMContentLoaded", function() {
			showModal('registerModal');
		});
	</script>
}


